<div class="mt-4">
    
    <div class="row">
        <div class="col-sm-6 col-lg-4">
            <div class="card card_course_item" >
                <a class="text-decoration-none" href="/courses/{{course.slug}}">
                    <img class="card-img-top overlay" src="{{course.linkImage}}" alt="{{course.name}}">
                    <span class="overlay-text">Xem khóa học</span>
                </a>
                <div class="card-body">
                    <a class="text-decoration-none" href="/courses/{{course.slug}}">
                        <h5 class="card-title">{{course.name}}</h5>
                    </a>
                    <p class="card-text">{{course.description}}</p>
                    <a href="#" class="btn btn-primary">Buy course</a>
                </div>
            </div>
        </div>
    </div>
</div>